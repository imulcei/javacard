<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.afpa.controllers.ContactController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <TextArea fx:id="errorTextArea" GridPane.columnSpan="2" />
      <VBox GridPane.rowIndex="1">
         <children>
            <Label text="Prénom" />
            <TextField fx:id="firstNameTextField" alignment="TOP_LEFT" />
            <Label text="Adresse Mail" />
            <TextField fx:id="emailTextField" />
            <Label text="Genre" />
            <ComboBox fx:id="genderComboBox" prefWidth="150.0" />
            <Label text="Adresse" />
            <TextField fx:id="addressTextField" />
            <Label text="Pseudo" />
            <TextField fx:id="pseudoTextField" />
         </children>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </VBox>
      <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Label text="Nom" />
            <TextField fx:id="lastNameTextField" />
            <Label text="Numéro de téléphone personnel" />
            <TextField fx:id="personalPhoneNumTextField" />
            <Label text="Date de naissance" />
            <TextField fx:id="birthdayTextField" />
            <Label text="Numéro de téléphone professionnel" />
            <TextField fx:id="proPhoneNumTextField" />
            <Label text="Github / Gitlab" />
            <TextField fx:id="githubTextField" />
         </children>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </VBox>
      <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
         <children>
            <Button fx:id="sendFormButton" mnemonicParsing="false" text="Valider">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Annuler">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </HBox>
   </children>
</GridPane>
