   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="QR Code" />
      <ImageView fx:id="qrCodeImageView" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="TOP_RIGHT">
         <children>
            <Button fx:id="quitQrCodeButton" mnemonicParsing="false" onAction="#closeQRCode" text="Quitter" />
         </children>
      </HBox>
   </children>
</VBox>
